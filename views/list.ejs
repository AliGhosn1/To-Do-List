<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= day %>!</h1>
    </div>

    <div class="box">
            <% for (item of items) {%>
                <div class="item">
                    <input type="checkbox">
                    <p>
                        <%= item %>
                    </p>
                </div>
            <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="task" placeholder="New Item" autocomplete="off" required>
            <button type="submit" name="list" value=<%= day %>>+</button>
        </form>
    </div>
    <%- include("footer") -%>